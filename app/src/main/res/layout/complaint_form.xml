
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
         >

        <EditText
            android:id="@+id/location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Location"
            android:inputType="textPersonName"
            android:singleLine="true" />



        <EditText
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/location"
            android:layout_below="@+id/location"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:hint="Contact "
            android:inputType="phone"
            android:singleLine="true" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/adhaar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/contact"
            android:layout_below="@+id/contact"
            android:layout_marginTop="21dp"
            android:ems="10"
            android:hint="ADHAAR Number"
            android:inputType="number"
            android:singleLine="true" />

        <EditText
            android:id="@+id/complain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/adhaar"
            android:layout_below="@+id/adhaar"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Enter Your Complain_"
            android:inputType="text"
            android:singleLine="true" />

        <EditText
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/location"

            android:layout_marginTop="19dp"
            android:ems="10"
            android:hint="Enter Name"
            android:inputType="textPersonName"
            android:singleLine="true" />

        <Button
            android:id="@+id/reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/complain"
            android:layout_marginTop="35dp"
            android:text="Complain" />

    </RelativeLayout>
